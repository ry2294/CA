<!-- Many particles of different mass that should all pass the 'finish line' at roughly two seconds -->

<scene>
  <duration time="1.0"/>
  <integrator type="explicit-euler" dt="0.01"/>

  <particle m="1.0"  px="0.0" py="0.0" vx="1.0" vy="1.0" fixed="0" radius="0.04"/>
  <particle m="1.0"  px="1.0" py="0.0" vx="-1.0" vy="1.0" fixed="0" radius="0.04"/>
  <particle m="1.0"  px="1.0" py="1.0" vx="-1.0" vy="-1.0" fixed="0" radius="0.04"/>
  <particle m="1.0"  px="0.0" py="1.0" vx="1.0" vy="-1.0" fixed="0" radius="0.04"/>

  <simplegravity fx="0.0" fy="0"/>

  <edge i="0" j="1" radius="0.01"/>
  <edge i="1" j="2" radius="0.01"/>
  <edge i="2" j="3" radius="0.01"/>
  <edge i="3" j="0" radius="0.01"/>

  <particlecolor i="0" r="1.0" g="1.0" b="0.2"/>
  <particlecolor i="1" r="0.0" g="0.8" b="0.4"/>
  <particlecolor i="2" r="1.0" g="0.0" b="0.2"/>
  <particlecolor i="3" r="0.5" g="0.2" b="0.4"/>

  <edgecolor i="0" r="0.9" g="0.0" b="0.3"/>
  <edgecolor i="1" r="0.6" g="1.0" b="0.7"/>
  <edgecolor i="2" r="0.3" g="0.8" b="0.9"/>
  <edgecolor i="3" r="0.6" g="0.2" b="1.0"/>
</scene>